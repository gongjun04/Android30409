<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:stretchColumns="*"
    tools:context=".MainActivity">

    <TableRow
        android:layout_marginBottom="10dp"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_span="3"
            android:src="@drawable/logo"/>
    </TableRow>

    <TableRow>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_span="3"
            android:text="로그인" />
    </TableRow>

    <TableRow
        android:layout_marginVertical="10dp"
        android:padding="10dp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_span="3"
            android:background="@drawable/line_custom"
            android:hint="등기(송장)번호를 입력하세요"
            android:inputType="numberPassword"
            android:maxLength="13" />
    </TableRow>

    <TableRow>

        <ImageView
            android:layout_span="3"
            android:src="@drawable/ad" />
    </TableRow>

    <TableRow>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/a"
            android:text="방문소포접수"
            android:textColor="@color/black" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/b"
            android:text="국제우편"
            android:textColor="@color/black" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/c"
            android:text="간편사진접수"
            android:textColor="@color/black" />
    </TableRow>
    <TableRow>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/d"
            android:text="우체국찾기"
            android:textColor="@color/black" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/e"
            android:text="우표 엽서발송"
            android:textColor="@color/black" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/f"
            android:text="요금조회"
            android:textColor="@color/black" />
    </TableRow>
    <TableRow android:layout_marginTop="10dp">
        <Button android:layout_span="3"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:text="공지 : 할인 이벤트"
            android:gravity="left"/>
    </TableRow>

</TableLayout>